<%- include('include/header.ejs')%>
<link rel="stylesheet" href="/stylesheets/add.css">
<body>
  <div style="width: 90%;margin:auto;">
  <a href="/users/" style="text-decoration: none; color:black;"><h1 style="text-align: center;">Times of Ambala</h1></a>
  <%- include('include/admin-nav.ejs')%>
  <div class="form-container">
    <h2>Update News</h2>
    <form action="/admin/updateinfo/<%=data._id%>" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Heading:</label>
            <input type="text" value="<%=data.title%>" name="title" required>
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" value="<%=data.image%>" name="image" accept="image/*" >
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea name="description" rows="5" required><%= data.description %></textarea>
        </div>
        
         
        <div class="form-group">
            <input type="submit" value="Submit">
            
        </div>
    </form>
</div>
  <%- include('include/footer.ejs')%>